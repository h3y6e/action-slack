{
  "name": "action-slack",
  "version": "3.19.0",
  "description": "You can notify slack of GitHub Actions.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build -m",
    "test": "jest",
    "all": "pnpm run build && pnpm run format-check && pnpm run lint && pnpm run pack && pnpm test",
    "release": "pnpm run build && pnpm run pack",
    "prepare-release": "./scripts/prepare-release.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h3y6e/action-slack.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup",
    "chat",
    "slack"
  ],
  "author": "h3y6e",
  "license": "MIT",
  "packageManager": "pnpm@10.21.0",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@slack/webhook": "^7.0.6",
    "https-proxy-agent": "^7.0.6",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/parser": "^8.48.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.1",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.2.1",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "js-yaml": "^4.1.1",
    "nock": "^14.0.10",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3"
  }
}
